@model BugTracker2.Models.Bug

@{
    ViewData["Title"] = "Edit Bug Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Bug Report</h1>

<h4>Bug Report for @ViewData["ProjectName"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="ProjectId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <input asp-for="ProjectId" type="hidden" />
                <input asp-for="BugId" type="hidden" />
                <input asp-for="ReportDate" type="hidden" />
                <label asp-for="BugName" class="control-label"></label>
                <input asp-for="BugName" class="form-control" />
                <span asp-validation-for="BugName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeverityId" class="control-label"></label>
                <select asp-for="SeverityId" class="form-control" asp-items="ViewBag.SeverityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Behavior" class="control-label"></label>
                <textarea asp-for="Behavior" class="form-control"></textarea>
                <span asp-validation-for="Behavior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StepsDescription" class="control-label"></label>
                <textarea asp-for="StepsDescription" class="form-control"></textarea>
                <span asp-validation-for="StepsDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserReportedId" class="control-label"></label>
                <select asp-for="UserReportedId" class="form-control" asp-items="ViewBag.UserReportedId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserAssignedId" class="control-label"></label>
                <select asp-for="UserAssignedId" class="form-control" asp-items="ViewBag.UserAssignedId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StatusId" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
