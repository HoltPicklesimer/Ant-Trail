@model BugTracker2.Models.UserProjectInfo

@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add User</h1>

<h4>Add a User to Project: @ViewBag.ProjectName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ProjectId" type="hidden" />
                <label asp-for="UserId" control-label"></label>
                <input asp-for="UserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PrivilegeId" class="control-label"></label>
                <select asp-for="PrivilegeId" class ="form-control" asp-items="ViewBag.PrivilegeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
