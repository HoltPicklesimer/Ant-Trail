@model BugTracker2.Models.UserProjectInfo

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Details for Project @Model.Project.ProjectName</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PublicInfo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrivilegeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Privilege.PrivilegeDisplay)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.UserProjectInfoId">Edit</a> |
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@Model.ProjectId">Back to List</a>
</div>
